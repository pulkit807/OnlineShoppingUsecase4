package com.usecase.onlineshopping.api.items.ui.controllers;

import java.util.List;

import javax.validation.Valid;

import org.modelmapper.ModelMapper;
import org.modelmapper.convention.MatchingStrategies;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.core.env.Environment;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.usecase.onlineshopping.api.items.service.Customer;
import com.usecase.onlineshopping.api.items.service.CustomerService;
import com.usecase.onlineshopping.api.items.service.Item;
import com.usecase.onlineshopping.api.items.service.ItemService;
import com.usecase.onlineshopping.api.items.ui.model.*;

@RestController()
@RequestMapping("/items")
public class ItemsController {
	
	@Autowired
	private Environment env;
	
	@Autowired
	ItemService itemService;
	
	
	@GetMapping("/status/check")
	public String status() {
		return "Working on port " + env.getProperty("local.server.port");
	}
	
	@GetMapping("/")
	public ResponseEntity<List<Item>> getItems() {
		List<Item> items = itemService.getAllItems();
		return ResponseEntity.status(HttpStatus.OK).body(items);
	}
	
	@GetMapping("/{itemName}")
	public ResponseEntity<Item> getItemByName(@PathVariable String itemName) {
		Item itemByName = itemService.getItemByName(itemName);
		return ResponseEntity.status(HttpStatus.OK).body(itemByName);
	}
}
